div
  h2(data-translate='health.title') Health Checks
  p
    button.btn.btn-primary(type='button', ng-click='vm.refresh()')
      span.glyphicon.glyphicon-refresh
      span(data-translate='health.refresh.button') Refresh
  table#healthCheck.table.table-striped
    thead
      tr
        th.col-md-7(data-translate='health.table.service') Service Name
        th.col-md-2.text-center(data-translate='health.table.status') Status
        th.col-md-2.text-center(data-translate='health.details.details') Details
    tbody
      tr(ng-repeat='health in vm.healthData')
        td
          | {{'health.indicator.' + vm.baseName(health.name) | translate}} {{vm.subSystemName(health.name)}}
        td.text-center
          span.label(ng-class='vm.getLabelClass(health.status)')
            | {{'health.status.' + health.status | translate}}
        td.text-center
          a.hand(ng-click='vm.showHealth(health)', ng-show='health.details || health.error')
            i.glyphicon.glyphicon-eye-open
