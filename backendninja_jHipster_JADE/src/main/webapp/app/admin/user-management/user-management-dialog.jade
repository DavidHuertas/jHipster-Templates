form(name='editForm', role='form', novalidate='', ng-submit='vm.save()', show-validation='')
  .modal-header
    button.close(type='button', data-dismiss='modal', aria-hidden='true', ng-click='vm.clear()') Ã—
    h4#myUserLabel.modal-title(data-translate='userManagement.home.createOrEditLabel')
      | Create or edit a User
  .modal-body
    jhi-alert-error
    .form-group(ng-show='vm.user.id')
      label(data-translate='global.field.id') ID
      input.form-control(type='text', name='id', ng-model='vm.user.id', readonly='')
    .form-group
      label.control-label(data-translate='userManagement.login') Login
      input.form-control(type='text', name='login', ng-model='vm.user.login', required='', ng-minlength='1', ng-maxlength='50', ng-pattern="/^[_'.@A-Za-z0-9-]*$/")
      div(ng-show='editForm.login.$invalid')
        p.help-block(ng-show='editForm.login.$error.required', data-translate='entity.validation.required')
          | This field is required.
        p.help-block(ng-show='editForm.login.$error.maxlength', data-translate='entity.validation.maxlength', translate-value-max='50')
          | This field cannot be longer than 50 characters.
    .form-group
      label.control-label(data-translate='userManagement.firstName') First Name
      input.form-control(type='text', name='firstName', ng-model='vm.user.firstName', ng-maxlength='50')
      div(ng-show='editForm.firstName.$invalid')
        p.help-block(ng-show='editForm.firstName.$error.maxlength', data-translate='entity.validation.maxlength', translate-value-max='50')
          | This field cannot be longer than 50 characters.
    .form-group
      label(data-translate='userManagement.lastName') Last Name
      input.form-control(type='text', name='lastName', ng-model='vm.user.lastName', ng-maxlength='50')
      div(ng-show='editForm.lastName.$invalid')
        p.help-block(ng-show='editForm.lastName.$error.maxlength', data-translate='entity.validation.maxlength', translate-value-max='50')
          | This field cannot be longer than 50 characters.
    .form-group
      label.control-label(data-translate='userManagement.email') Email
      input.form-control(type='email', name='email', ng-model='vm.user.email', required='', ng-maxlength='100')
      div(ng-show='editForm.email.$invalid')
        p.help-block(ng-show='editForm.email.$error.required', data-translate='entity.validation.required')
          | This field is required.
        p.help-block(ng-show='editForm.email.$error.maxlength', data-translate='entity.validation.maxlength', translate-value-max='100')
          | This field cannot be longer than 100 characters.
        p.help-block(ng-show='editForm.email.$error.email', data-translate='global.messages.validate.email.invalid')
          | Your email is invalid.
    .form-group
      label(for='activated')
        input#activated(ng-disabled='vm.user.id === null', type='checkbox', name='activated', ng-model='vm.user.activated')
        span(data-translate='userManagement.activated') Activated
    .form-group
      label(data-translate='userManagement.langKey') Lang Key
      select.form-control(name='langKey', ng-model='vm.user.langKey', ng-options='language as language for language in vm.languages track by language')
    .form-group
      label(data-translate='userManagement.profiles') Profiles
      select.form-control(multiple='', name='authority', ng-model='vm.user.authorities', ng-options='authority for authority in vm.authorities')
  .modal-footer
    button.btn.btn-default(type='button', data-dismiss='modal', ng-click='vm.clear()')
      span.glyphicon.glyphicon-ban-circle
      span(data-translate='entity.action.cancel') Cancel
    button.btn.btn-primary(type='submit', ng-disabled='editForm.$invalid || vm.isSaving')
      span.glyphicon.glyphicon-save
      span(data-translate='entity.action.save') Save
